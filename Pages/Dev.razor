@page "/lista-enlazada"

@using Listas.Services
@inject ListaEnlazadaSimple listaEnlazada

<h3>Lista Enlazada Simple</h3>

<!-- Sección para agregar un nuevo nodo al final de la lista -->
<div>
    <input @bind="nuevoValor" placeholder="Ingresa un valor para el nodo" />
    <button @onclick="AgregarNodo">Agregar Nodo al Final</button>
</div>

<!-- Sección para mostrar la lista enlazada -->
<ul>
    @foreach (var nodo in listaEnlazada)
    {
        <li>@nodo.Valor</li>
    }
</ul>

<!-- Sección para eliminar el último nodo de la lista -->
<div>
    <button @onclick="EliminarUltimoNodo">Eliminar Último Nodo</button>
</div>

@code {
    private string nuevoValor;

    // Método para agregar un nuevo nodo al final de la lista
    private void AgregarNodo()
    {
        var nuevoNodo = new Nodo { Valor = nuevoValor };
        listaEnlazada.AgregarNodoAlFinal(nuevoNodo);
        nuevoValor = string.Empty; // Limpiar el campo de texto
    }

    // Método para eliminar el último nodo de la lista
    private void EliminarUltimoNodo()
    {
        listaEnlazada.EliminarNodoFinal();
    }
}
